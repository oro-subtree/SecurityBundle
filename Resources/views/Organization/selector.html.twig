{% set curr_organization   = app.security.getToken().getOrganizationContext() %}
{% set organizations       = get_enabled_organizations() %}

{% set organization_name %}
    {% placeholder organization_name %}
{% endset %}

{% if organizations|length > 1 %}
    <div class="nav top-search fix_logo">
        <div class="dropdown header-dropdown-shortcut header-utility-dropdown">
            <h1 class="logo logo-{{ oro_theme_logo() ? 'image' : 'text' }} dropdown-toggle" data-toggle="dropdown">
                <a href="#" title="{{ 'oro.organization.form.choose_organization'|trans }}">
                    {% if oro_theme_logo() %}
                        <img src="{{ asset(oro_theme_logo()) }}" alt="{{ organization_name|striptags|trim }}">
                    {% else %}
                        {{ organization_name }} <i class="icon-sort-down fix_icon"></i>
                    {% endif %}
                </a>
            </h1>
            <ul class="dropdown-menu" role="menu">
                {% for organization in organizations %}
                    {% if curr_organization.getId() != organization.id %}
                        <li>
                            <a href="{{ path('oro_security_switch_organization', {'id': organization.id}) }}"
                               class="organization-switcher no-hash">
                                <span class="title">{{ organization.name }}</span>
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
    <script type="text/javascript">
        require(['orosecurity/js/init-organization-selector'])
    </script>
{% else %}
    <h1 class="logo logo-{{ oro_theme_logo() ? 'image' : 'text' }}">
        <a href="{{ path('oro_default') }}" title="{{ organization_name|striptags|trim }}">
            {% if oro_theme_logo() %}
                <img src="{{ asset(oro_theme_logo()) }}" alt="{{ organization_name|striptags|trim }}">
            {% else %}
                {{ organization_name }}
            {% endif %}
        </a>
    </h1>
{% endif %}
